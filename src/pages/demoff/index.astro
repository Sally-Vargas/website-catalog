---
import Layout from "@/components/demoFF/Layout.astro";
import CardsFF from "../../components/demoFF/CardsFF.astro";
import Carrusel from "../../components/demoFF/Carrusel.astro";
import Hero from "../../components/demoFF/Hero.astro";
import type { TMenu } from "@/components/demoFF/utils/types";
import menuService from "@/components/demoFF/service/menuServices";
import { navLinks } from "@/components/demoFF/Header.astro";

const Popular: TMenu[] = menuService
  .query()
  .sortBy("sortOrder", "asc")
  .limit(4)
  .get();

const shortMenu: TMenu[] = menuService.query().byTags(["hamburgesas"]).get();
---

<Layout title="Fast Burger - Inicio">
  <main>
    <Hero />
    <section id="popular" class="section container">
      <h2 class="section-title">Lo Más Popular</h2>
      <CardsFF promos={Popular} />
    </section>

    <Carrusel />

    <section id="menu-corto" class="section container">
      <h2 class="section-title">Nuestro Menú</h2>
      <CardsFF promos={shortMenu} />
      <div class="btn-container">
        <a href={navLinks.menu.href} class="btn">Ver Menú Completo</a>
      </div>
    </section>
  </main>
</Layout>
