---
interface Props {
    lang: 'es' | 'en';
}
const { lang } = Astro.props;

const content = {
    es: {
        title: "Agende su Consulta",
        subtitle: "¿Lista para dar el siguiente paso? Contáctenos hoy para programar su consulta privada.",
        name: "Nombre",
        email: "Correo Electrónico",
        message: "Mensaje",
        button: "Enviar Mensaje"
    },
    en: {
        title: "Schedule Your Consultation",
        subtitle: "Ready to take the next step? Contact us today to schedule your private consultation.",
        name: "Name",
        email: "Email Address",
        message: "Message",
        button: "Send Message"
    }
}
const currentContent = content[lang];
const sectionId = lang === 'es' ? 'contacto' : 'contact';
---

<section id={sectionId} class="contact-section">
    <div class="contact-container">
        <div class="section-header">
            <h2 class="section-title">{currentContent.title}</h2>
            <p class="section-subtitle">{currentContent.subtitle}</p>
        </div>
        <div class="form-wrapper">
            <form action="#" method="POST" class="contact-form">
                <div>
                    <label for="name" class="sr-only">{currentContent.name}</label>
                    <input type="text" name="name" id="name" autocomplete="name" placeholder={currentContent.name} required class="form-input">
                </div>
                <div>
                    <label for="email" class="sr-only">{currentContent.email}</label>
                    <input type="email" name="email" id="email" autocomplete="email" placeholder={currentContent.email} required class="form-input">
                </div>
                <div>
                    <label for="message" class="sr-only">{currentContent.message}</label>
                    <textarea name="message" id="message" rows="4" placeholder={currentContent.message} required class="form-input"></textarea>
                </div>
                <div>
                    <button type="submit" class="submit-button">
                        {currentContent.button}
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
<style>
    .contact-section {
        padding-top: 5rem;
        padding-bottom: 5rem;
        background-color: #f3f4f6; /* bg-gray-100 */
    }

    .contact-container {
        width: 100%;
        max-width: 1280px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;
    }

    .section-header {
        max-width: 48rem; /* max-w-3xl */
        margin-left: auto;
        margin-right: auto;
        text-align: center;
        margin-bottom: 3rem; /* mb-12 */
    }

    .section-title {
        font-size: 2.25rem; /* text-4xl */
        font-weight: 700; /* font-bold */
        color: #111827; /* text-gray-900 */
        font-family: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
    }

    .section-subtitle {
        font-size: 1.125rem; /* text-lg */
        color: #4b5563; /* text-gray-600 */
        margin-top: 0.5rem; /* mt-2 */
    }

    .form-wrapper {
        max-width: 36rem; /* max-w-xl */
        margin-left: auto;
        margin-right: auto;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem; /* space-y-6 */
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem 1rem; /* px-4 py-3 */
        border-radius: 0.375rem; /* rounded-md */
        border: 1px solid #d1d5db; /* border-gray-300 */
        box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05); /* shadow-sm */
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .form-input:focus {
        outline: 2px solid transparent;
        outline-offset: 2px;
        border-color: #2563eb; /* focus:border-blue-500 */
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.5); /* focus:ring-blue-500 */
    }

    .submit-button {
        width: 100%;
        background-color: #2563eb; /* bg-blue-600 */
        color: white;
        padding: 0.75rem 1.5rem; /* px-6 py-3 */
        border-radius: 0.375rem; /* rounded-md */
        font-size: 1.125rem; /* text-lg */
        font-weight: 600; /* font-semibold */
        border: none;
        cursor: pointer;
        box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1); /* shadow-lg */
        transition: background-color 0.2s ease;
    }

    .submit-button:hover {
        background-color: #1d4ed8; /* hover:bg-blue-700 */
    }
</style>
