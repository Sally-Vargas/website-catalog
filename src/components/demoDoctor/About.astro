---
import { Image } from 'astro:assets';
import { getDoctorData, type DoctorData } from './content/doctor';

interface Props {
    lang: 'es' | 'en';
}
const { lang } = Astro.props;

const doctor: DoctorData = getDoctorData(lang);

const content = {
    es: {
        title: "Conozca al",
        certificatesTitle: "Certificaciones y Membres√≠as"
    },
    en: {
        title: "Meet",
        certificatesTitle: "Certifications & Memberships"
    }
}
const currentContent = content[lang];
const sectionId = lang === 'es' ? 'doctor' : 'doctor';
---

<section id={sectionId} class="about-section">
    <div class="about-container">
        <div class="about-grid">
            <div class="doctor-image-wrapper">
                <Image 
                    {...doctor.image} 
                    alt={`Retrato de ${doctor.name}`} 
                    widths={[240, 480, 640]}
                    sizes="(max-width: 767px) 90vw, 45vw"
                    class="doctor-image" />
            </div>
            <div class="doctor-info">
                <h2 class="about-title">{currentContent.title} <span class="doctor-name">{doctor.name}</span></h2>
                <p class="doctor-bio">{doctor.bio}</p>
                
                <h3 class="certificates-title">{currentContent.certificatesTitle}</h3>
                <ul class="certificates-list">
                    {doctor.certificates.map(cert => (
                        <li class="certificate-item">
                            <svg class="certificate-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            <div>
                                <p class="certificate-name">{cert.name}</p>
                                <p class="certificate-issuer">{cert.issuer}, {cert.year}</p>
                            </div>
                        </li>
                    ))}
                </ul>
            </div>
        </div>
    </div>
</section>
<style>
    .about-section {
        padding-top: 5rem; /* py-20 */
        padding-bottom: 5rem; /* py-20 */
        background-color: #ffffff; /* bg-white */
    }

    .about-container {
        width: 100%;
        max-width: 1280px; /* container */
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;
    }

    .about-grid {
        display: grid;
        grid-template-columns: repeat(1, minmax(0, 1fr)); /* grid-cols-1 */
        gap: 3rem; /* gap-12 */
        align-items: center;
    }

    .doctor-image {
        border-radius: 0.5rem; /* rounded-lg */
        box-shadow: 0 25px 50px -12px rgb(0 0 0 / 0.25); /* shadow-2xl */
        width: 100%;
        object-fit: cover;
    }

    .about-title {
        font-size: 2.25rem; /* text-4xl */
        font-weight: 700; /* font-bold */
        color: #111827; /* text-gray-900 */
        font-family: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif; /* font-serif */
        margin-bottom: 1rem; /* mb-4 */
    }

    .doctor-name {
        color: #2563eb; /* text-blue-600 */
    }

    .doctor-bio {
        color: #4b5563; /* text-gray-600 */
        font-size: 1.125rem; /* text-lg */
        line-height: 1.75; /* leading-relaxed */
        margin-bottom: 1.5rem; /* mb-6 */
    }

    .certificates-title {
        font-size: 1.5rem; /* text-2xl */
        font-weight: 700; /* font-bold */
        color: #1f2937; /* text-gray-800 */
        font-family: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif; /* font-serif */
        margin-bottom: 1rem; /* mb-4 */
        margin-top: 2rem; /* mt-8 */
    }

    .certificates-list {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem; /* space-y-3 */
    }

    .certificate-item {
        display: flex;
        align-items: flex-start;
    }

    .certificate-icon {
        width: 1.5rem; /* w-6 */
        height: 1.5rem; /* h-6 */
        color: #2563eb; /* text-blue-600 */
        margin-right: 0.75rem; /* mr-3 */
        margin-top: 0.25rem; /* mt-1 */
        flex-shrink: 0;
    }

    .certificate-name {
        font-weight: 600; /* font-semibold */
    }

    .certificate-issuer {
        font-size: 0.875rem; /* text-sm */
        color: #6b7280; /* text-gray-500 */
    }

    /* Media Query para el layout de dos columnas y el orden */
    @media (min-width: 768px) { /* md: */
        .about-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr)); /* md:grid-cols-2 */
        }
        .doctor-image-wrapper {
            order: 2; /* md:order-2 */
        }
        .doctor-info {
            order: 1; /* md:order-1 */
        }
    }
</style>