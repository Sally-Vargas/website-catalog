                radial-gradient(circle at 50% 50%, rgba(139, 92, 246, 0.1) 0%, transparent 70%);
    animation: contactPulse 6s ease-in-out infinite alternate;
}

@keyframes contactPulse {
    0% { opacity: 0.4; }
    100% { opacity: 0.7; }
}

.contact-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
}

.contact .section-title {
    color: var(--text-light);
