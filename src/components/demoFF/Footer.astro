---
const footer = {
	derechos: "2025 Demo Fast Food. Todos los derechos reservados.",
	redes: "SÃ­guenos en redes:",
	facebook: "https://facebook.com",
	instagram: "https://instagram.com",
}
---

<footer class="main-footer">
	<div class="container">
		<div class="footer-content">
			<p>&copy; {footer.derechos}</p>
			<div class="social-media">
				<p>{footer.redes}</p>
				<div class="social-icons">
					<a href={footer.facebook} target="_blank" aria-label="Facebook">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook">
							<path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
						</svg>
					</a>
					<a href={footer.instagram} target="_blank" aria-label="Instagram">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram">
							<rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
							<path d="M16 11.37a4 4 0 1 1-7.23 2.63 4 4 0 0 1 7.23-2.63z"></path>
							<line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</div>
</footer>

<style>
	.main-footer {
		background-color: #000;
		text-align: center;
		padding: 20px 0;
		margin: 20px 0 0 0;
	}
	.footer-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 15px;
	}
	.social-media {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 5px;
	}
	.social-icons {
		display: flex;
		gap: 15px;
	}
	.social-icons a {
		color: var(--text-white);
		transition: color 0.3s ease;
	}
	.social-icons a:hover {
		color: var(--accent-yellow);
	}
	.social-icons svg {
		width: 24px;
		height: 24px;
	}

	@media (min-width: 769px) {
		.footer-content {
			flex-direction: row;
			justify-content: space-between;
		}
		.social-media {
			flex-direction: row;
			gap: 10px;
		}
	}
</style>