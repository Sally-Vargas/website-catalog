---
import { ViewTransitions } from 'astro:transitions';
import Header from './Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>{title}</title>
	<!-- <ViewTransitions /> -->
</head>
<body>
	<Header/>
	<main>
		<slot />
	</main>
</body>
</html>

<style is:global>
	:root {
	--font-primary: 'Helvetica Neue', Arial, sans-serif;
	--font-secondary: 'Georgia', serif;
	--color-dark: #121212;
	--color-light: #f4f4f4;
	--color-accent-blue: #007bff;
	--color-accent-red: #ff4136;
	--color-accent-yellow: #ffc107;
	--background: #5e548e;
}

* {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
}

html {
	scroll-behavior: smooth;
}

body {
	font-family: var(--font-primary);
	background-color: var(--background);
	color: var(--color-dark);
	line-height: 1.6;
}

h1, h2, h3 {
	font-family: var(--font-secondary);
	margin-bottom: 20px;
}

.container {
	max-width: 1200px;
	margin: 0 auto;
	padding: 0 20px;
}

.section {
	padding: 80px 0;
	/* border-bottom: 1px solid #ddd; */
}

.section-title {
	text-align: center;
	font-size: 2.5em;
	margin-bottom: 60px;
}

/* Utiler√≠as */
.flex-center {
    display: flex;
    justify-content: center;
    align-items: center;
}
</style>