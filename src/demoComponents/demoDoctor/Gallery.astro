---
import { Image } from 'astro:assets';
import { getGalleryItems } from './content/gallery';

interface Props {
    lang: 'es' | 'en';
}
const { lang } = Astro.props;

const content = {
    es: {
        title: "Galería de Resultados",
        subtitle: "Transformaciones reales, confianza renovada.",
        before: "Antes",
        after: "Después"
    },
    en: {
        title: "Results Gallery",
        subtitle: "Real transformations, renewed confidence.",
        before: "Before",
        after: "After"
    }
}
const currentContent = content[lang];
const sectionId = lang === 'es' ? 'galeria' : 'gallery';
const galleryItems = getGalleryItems(lang);
---

<section id={sectionId} class="gallery-section">
    <div class="gallery-container">
        <div class="section-header">
            <h2 class="section-title">{currentContent.title}</h2>
            <p class="section-subtitle">{currentContent.subtitle}</p>
        </div>
        <div class="gallery-grid">
            {galleryItems.map(item => (
                <div class="gallery-item">
                    <div class="image-comparison">
                        <div class="image-wrapper">
                            <Image {...item.before} alt={item.alt + ' ' + currentContent.before} 
                            widths={[240, 480, 640]}
                            sizes="(max-width: 767px) 50vw, 25vw"
                            class="comparison-image" />
                            <div class="image-label label-before">{currentContent.before}</div>
                        </div>
                        <div class="image-wrapper">
                            <Image {...item.after} alt={item.alt + ' ' + currentContent.after} widths={[240, 480, 640]} sizes="(max-width: 767px) 50vw, 25vw" class="comparison-image" />
                            <div class="image-label label-after">{currentContent.after}</div>
                        </div>
                    </div>
                    <div class="item-overlay">
                        <p class="item-alt-text">{item.alt}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
<style>
    .gallery-section {
        padding-top: 5rem;
        padding-bottom: 5rem;
        background-color: #f9fafb;
    }
    .gallery-container {
        width: 100%;
        max-width: 1280px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;
    }
    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }
    .section-title {
        font-size: 2.25rem;
        font-weight: 700;
        color: #111827;
        font-family: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
    }
    .section-subtitle {
        font-size: 1.125rem;
        color: #4b5563;
        margin-top: 0.5rem;
    }
    .gallery-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    .gallery-item {
        position: relative;
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    }
    .image-comparison {
        display: flex;
    }
    .image-wrapper {
        width: 50%;
        position: relative;
    }
    /* Usamos :global para apuntar a la <img> generada por Astro */
    :global(.comparison-image) {
        width: 100%;
        height: 20rem; /* 320px */
        object-fit: cover;
        display: block;
    }
    .image-label {
        position: absolute;
        bottom: 0;
        padding: 0.25rem 0.75rem;
        color: white;
        font-size: 0.875rem;
        font-weight: 600;
    }
    .label-before {
        left: 0;
        background-color: rgba(0, 0, 0, 0.5);
    }
    .label-after {
        right: 0;
        background-color: rgba(37, 99, 235, 0.8); /* bg-blue-600/80 */
    }
    .item-overlay {
        position: absolute;
        inset: 0;
        background-color: rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    .gallery-item:hover .item-overlay {
        opacity: 1;
    }
    .item-alt-text {
        color: white;
        font-size: 1.25rem;
        font-weight: 700;
    }

    @media (min-width: 768px) {
        .gallery-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>
