---
import { Image } from 'astro:assets';
import { content,img } from './content/sections/hero';

interface Props {
    lang: 'es' | 'en';
}
const { lang } = Astro.props;

const currentContent = content[lang];
---

<section class="hero-section">
    <Image 
        {...img.main} 
        widths={[480, 768, 1250, 1920]} 
        sizes="100vw" 
        quality="high" 
        loading="eager" 
        class="hero-image" 
    />
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <p class="hero-subtitle">{currentContent.subtitle}</p>
        <h1 class="hero-title">{currentContent.title}</h1>
        <p class="hero-description">{currentContent.description}</p>
        <a href={lang === 'es' ? '#tratamientos' : '#treatments'} class="hero-button">
            {currentContent.button}
        </a>
    </div>
</section>
<style>
    .hero-section {
        position: relative;
        height: 600px;
        color: white;
    }

    /* Astro añade una clase única a la imagen, por lo que necesitamos :global para apuntar a ella */
    :global(.hero-image) {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .hero-content {
        /* Simulando la clase 'container' de Tailwind */
        width: 100%;
        max-width: 1280px; /* Equivalente a xl en Tailwind, ajústalo si es necesario */
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;

        /* Estilos de Flexbox */
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;

        /* Posicionamiento sobre la imagen y el overlay */
        position: relative;
        z-index: 10;
    }

    .hero-subtitle {
        font-size: 1.125rem; /* text-lg */
        font-weight: 500; /* font-medium */
        text-transform: uppercase;
        letter-spacing: 0.05em; /* tracking-wider */
        color: #93c5fd; /* text-blue-300 */
    }

    .hero-title {
        font-size: 3rem; /* text-5xl */
        font-weight: 700; /* font-bold */
        margin-top: 1rem; /* my-4 */
        margin-bottom: 1rem; /* my-4 */
        max-width: 48rem; /* max-w-3xl */
        line-height: 1.25; /* leading-tight */
        font-family: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif; /* font-serif */
    }

    .hero-description {
        font-size: 1.25rem; /* text-xl */
        max-width: 42rem; /* max-w-2xl */
        margin-bottom: 2rem; /* mb-8 */
        color: #e5e7eb; /* text-gray-200 */
    }

    .hero-button {
        background-color: #2563eb; /* bg-blue-600 */
        color: white;
        padding: 0.75rem 2rem; /* px-8 py-3 */
        border-radius: 0.375rem; /* rounded-md */
        font-size: 1.125rem; /* text-lg */
        font-weight: 600; /* font-semibold */
        box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1); /* shadow-lg */
        transition: background-color 0.2s ease, transform 0.2s ease;
        text-decoration: none;
    }

    .hero-button:hover {
        background-color: #1d4ed8; /* hover:bg-blue-700 */
        transform: scale(1.05); /* hover:scale-105 */
    }

    /* Media Query para el tamaño de fuente responsivo del título */
    @media (min-width: 768px) {
        .hero-title {
            font-size: 4.5rem; /* md:text-7xl */
            line-height: 1;
        }
    }
</style>