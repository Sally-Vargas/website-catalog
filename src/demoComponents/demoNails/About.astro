---
import { Image } from "astro:assets";
import aboutImageSrc from "./images/demo/2-about.jpg";

const about = {
  title: "Quienes somos",
  img: {src:aboutImageSrc, alt:"Interior del salón de belleza de uñas, mostrando un ambiente profesional y acogedor"},
  content: "Somos un equipo de especialistas en belleza de uñas apasionados por los detalles. Creemos que cada persona merece lucir unas manos impecables, y por eso trabajamos con productos de alta calidad, técnicas modernas y un servicio pensado para ti.",
};
---

<!-- About Section -->
<section id="about" class="about">
  <div class="container">
    <h2 class="section-title fade-in">{about.title}</h2>
    <div class="about-content">
      <div class="about-image slide-in-left">
        <Image
          {...about.img}
          widths={[400, 800, 1200]}
          sizes="(max-width: 1024px) 90vw, 40vw"
          class="about-img-tag"
        />
      </div>
      <div class="about-text slide-in-right">
        <h3>{about.content}</h3>
      </div>
    </div>
  </div>
</section>

<style>
  /* About Section */
  .about {
    background: var(--bg-secondary);
    position: relative;
  }

  .about::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      circle at 10% 20%,
      rgba(99, 102, 241, 0.05) 0%,
      transparent 50%
    );
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 6rem;
    align-items: center;
    position: relative;
  }

  .about-image {
    width: 100%;
    height: 500px;
    border-radius: 30px;
    position: relative;
    overflow: hidden;
    transform: rotate(-2deg);
    transition: transform 0.4s ease;
  }

  .about-img-tag {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .about-image:hover {
    transform: rotate(0deg) scale(1.02);
  }

  .about-text h3 {
    font-family: "Segoe UI", "Roboto", "Helvetica Neue", "Arial", sans-serif;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--text-secondary);
    font-weight: 500;
    line-height: 1.3;
  }

  .about-text p {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  @media (max-width: 1024px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: 4rem;
    }
  }

  @media (max-width: 768px) {
    .about-text h3 {
      font-size: 2rem;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const observerOptions = {
      threshold: 0.15,
      rootMargin: "0px 0px -80px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("animate");
        }
      });
    }, observerOptions);

    const animatedElements = document.querySelectorAll(
      "#about .fade-in, #about .slide-in-left, #about .slide-in-right"
    );
    animatedElements.forEach((el) => observer.observe(el));
  });
</script>
